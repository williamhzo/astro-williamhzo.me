---
import BaseLayout from '@layouts/BaseLayout.astro';
import { LINKS } from '@data/links';
import PageMeta from '@layouts/seo/PageMeta.astro';
---

<BaseLayout>
  <PageMeta title="Contact" />

  <article class="[ wrapper ] [ prose ] [ region ]" slot="main">
    <h1>Get in touch</h1>

    <p>Feel free to connect and say hi :)</p>

    <ul role="list" class="[ cluster ] contact-links">
      {
        LINKS.map((link) => (
          <li>
            <a href={link.href} rel="me" class="contact-link">
              williamhzo<span>@{link.label}</span>
            </a>
          </li>
        ))
      }
    </ul>
  </article>
</BaseLayout>
