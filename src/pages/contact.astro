---
import BaseLayout from '@layouts/BaseLayout.astro';
import { LINKS } from '@data/links';
import PageMeta from '@components/seo/PageMeta.astro';
import PageSection from '@components/PageSection.astro';
---

<BaseLayout>
  <PageMeta title="Contact" slot="meta" />

  <PageSection slot="main">
    <h1>Get in touch</h1>

    <p>
      <a href="mailto:hi@williamhzo.me">Email me</a> at <em>hi@williamhzo.me</em
      >, or connect via the links below:
    </p>

    <ul role="list" class="cluster contact-links">
      {
        LINKS.map((link) => (
          <li>
            <a href={link.href} rel="me" class="contact-link">
              williamhzo<span>@{link.label}</span>
            </a>
          </li>
        ))
      }
    </ul>
  </PageSection>
</BaseLayout>
