---
import BaseLayout from '@layouts/BaseLayout.astro';
import PageMeta from '@components/seo/PageMeta.astro';
import PageSection from '@components/PageSection.astro';
---

<BaseLayout>
  <PageMeta title="Not found" slot="meta" />

  <PageSection slot="main">
    <h1>Page not found...</h1>

    <p>
      This page doesn't exist there must be a typo in the URL, or maybe I broke
      everything.
    </p>

    <p>Either way, <a href="/">returning to the homepage</a> may help.</p>
  </PageSection>
</BaseLayout>
