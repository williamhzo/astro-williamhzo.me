---
import { SEO } from 'astro-seo';

interface Props {
  title: string;
  description?: string;
  noindex?: boolean;
}

const { title, description, noindex } = Astro.props;

const DEFAULT_PAGE_TITLE = 'William, freelance Frontend Engineer';
const DEFAULT_PAGE_DESCRIPTION =
  'Passionate about Design Systems and intuitive User Interfaces, focused on accessibility, SEO and User Experience.';
---

<!-- see https://github.com/jonasmerlin/astro-seo#readme. -->
<SEO
  title={title ? `${title} | ${DEFAULT_PAGE_TITLE}` : DEFAULT_PAGE_TITLE}
  description={description || DEFAULT_PAGE_DESCRIPTION}
  charset="UTF-8"
  noindex={noindex || false}
  extend={{
    // extending link tags
    link: [
      // favicon
      {
        rel: 'icon',
        href: 'data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>üê°</text></svg>',
      },
    ],
    // extending meta tags
    meta: [
      { name: 'viewport', content: 'width=device-width, initial-scale=1' },
      { name: 'generator', content: 'astro-kit' },
      {
        name: 'theme-color',
        content: '#9EA3FA',
        media: '(prefers-color-scheme: dark)',
      },
      {
        name: 'theme-color',
        content: '#5941F1',
        media: '(prefers-color-scheme: light)',
      },
    ],
  }}
  twitter={{
    creator: '@williamhzo',
  }}
/>

